<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.iodetection.MainActivity" >
    
    
	<TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:paddingLeft="10sp"
        android:paddingTop="20sp"
        android:text="Indoor Outdoor Detection!" />
	
	
	<View
    	android:layout_width="match_parent"
    	android:layout_height="2dp"
    	android:layout_marginTop = "20sp"
    	android:background="@android:color/darker_gray"/>
	
	


	<LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:layout_weight="1.0" >   
    			
		<Button
        	android:id="@+id/All_switch"
        	android:layout_width="150dp"
        	android:layout_height="wrap_content"
        	android:text ="Start Detection"
        	android:paddingTop="10px"
        	android:paddingLeft="40px"
        	android:paddingRight="40px"
        	android:paddingBottom="10px"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
        	android:onClick="AllSwitch"/>

    	<Button
        	android:id="@+id/AudioSwitch"
        	android:layout_width="150dp"
        	android:layout_height="wrap_content"
        	android:paddingTop="10px"
        	android:paddingLeft="40px"
        	android:paddingRight="40px"
        	android:paddingBottom="10px"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:onClick="AudioEnableSwitch"/>
  	
	</LinearLayout>
	
	<View
    	android:layout_width="match_parent"
    	android:layout_height="2dp"
    	android:layout_marginTop = "20sp"
    	android:background="@android:color/darker_gray"/>

	<LinearLayout
    
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_weight="1.0"
    	android:orientation="vertical" >
   	
   		<TextView
        	android:id="@+id/All_result"
        	android:text ="Result: "
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginTop="30dp"
        	android:layout_marginLeft="10dp"
        	android:textSize="20sp" />
    
   	
	</LinearLayout>
	
	<View
    	android:layout_width="match_parent"
    	android:layout_height="2dp"
    	android:layout_marginTop = "20sp"
    	android:background="@android:color/darker_gray"/>
	
	<TextView
        android:id="@+id/UserInput_reading"
        android:text ="In reality, you are: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"/>
   	
	<LinearLayout
    
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_weight="1.0"
    	android:orientation="horizontal"
    	android:paddingTop="10dp" >

   	
  		<Button
        	android:id="@+id/Indoor_switch"
        	android:layout_width="120sp"
        	android:layout_height="wrap_content"
        	android:layout_weight="1.0"
        	android:text ="Indoor"
        	android:layout_marginTop="10dp"
        	android:paddingTop="10dp"
        	android:paddingLeft="20dp"
        	android:paddingRight="20dp"
        	android:paddingBottom="10dp"
        	android:onClick="IndoorSwitch"/>
  	
 		<Button
        	android:id="@+id/Outdoor_switch"
        	android:layout_width="120sp"
        	android:layout_height="wrap_content"
        	android:layout_weight = "1.0"
        	android:text ="Outdoor"
        	android:onClick="OutdoorSwitch"
        	android:layout_marginTop="10dp"
        	android:paddingTop="10dp"
        	android:paddingLeft="20dp"
        	android:paddingRight="20dp"
        	android:paddingBottom="10dp"/>
 	
	</LinearLayout>
    

</LinearLayout>

